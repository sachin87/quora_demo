<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Asked By:</strong>
  <%= link_to @question.user.email, follow_user_path(@question.user), class: 'follow_user', method: :post %>
</p>

<p>
  <strong>Topic:</strong>
  <%= link_to @question.topic.name, follow_topic_path(@question.topic), class: 'follow_topic', method: :post %>
</p>

<%  @question.answers.each do |answer| %>
  <div class='answer'>
    <%= answer.answer %>
  </div>
<% end %>

<%= link_to 'Add Answer', new_question_answer_path(@question) %>
<%= link_to 'Back', questions_path %>
